<div class="box">
    <div class="box-header">
        <h2>Signup</h2>
    </div>
    <div class="box-content">
        <form id="signup-form">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required minlength="4" maxlength="25" size="10">
            <label for="password">Password</label>
            <input type="text" id="password" name="password" required minlength="4" maxlength="25" size="10">
            <input type="submit" value="Sign up!" class="form-button">
        </form>
        <a href="/login">Login instead</a>
    </div>
</div>
<script src="./js/signup.js"></script>


